<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Product_Show"
    android:orientation="vertical"
    android:background="@color/backgroundColor">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/image_view_show_kala"
                android:layout_width="200dp"
                android:layout_height="250dp"/>
            <TextView
                android:id="@+id/textview_name_kala_show"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="30dp"
                android:background="@color/listRowColor"
                android:gravity="center"
                android:textColor="#090909"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/textview_price_show"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="30dp"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="#090909"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/textview_groh_show"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="30dp"
                android:background="@color/listRowColor"
                android:gravity="center"
                android:textColor="#090909"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/textview_username_show"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="30dp"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="#090909"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/textview_mobilenumber_show"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="30dp"
                android:background="@color/listRowColor"
                android:gravity="center"
                android:textColor="#090909"
                android:layout_margin="10dp"
                android:onClick="oncli"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>